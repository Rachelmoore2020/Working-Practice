<div class="container">
    <br>
  <img src="./assets/burger.png" style="width:140px" alt="cartoon pic of a burger">
  
  <h1 style="color:red">Eat-Da-Burger!</h1>

  <div class="centered">
<h3>Add a burger you would like to eat</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  

  <button type="submit">Add burger</button>
</div>
</div>
</div class="twoCol">
<div class="leftSide"></div>
<h3>Burgers that have not been eaten</h3>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div class="rightSide">
<h3>Burgers that have been eaten.</h3>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>


  </div>
</form>
