<h1>burgers</h1>

<h2>burgers that have not been eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that have been eaten.</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add burger</button>
</form>
